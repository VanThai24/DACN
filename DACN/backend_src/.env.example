# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dacn_db
# or for SQLite (development only)
# DATABASE_URL=sqlite:///./dacn.db

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Model Configuration
AI_MODEL_PATH=../AI/faceid_model_tf_best.h5
FACE_EMBEDDING_SIZE=128
FACE_RECOGNITION_THRESHOLD=0.6

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Flask AI Backend
FLASK_AI_URL=http://localhost:5000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER=../wwwroot/photos
ALLOWED_EXTENSIONS=jpg,jpeg,png

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourcompany.com

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Environment
ENVIRONMENT=development  # development, staging, production
