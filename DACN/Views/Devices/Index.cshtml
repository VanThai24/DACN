@model IEnumerable<Models.Device>
@{
    ViewBag.Title = "Danh sách thiết bị";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Danh sách thiết bị</h2>
                <a asp-action="Create" class="btn btn-light">
                    <i class="bi bi-plus-circle"></i> Thêm mới
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Vị trí</th>
                            <th>API Key</th>
                            <th>Last Seen</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.Id</td>
                                <td>@d.Name</td>
                                <td>@d.Location</td>
                                <td><code>@d.ApiKey</code></td>
                                <td>@(d.LastSeen?.ToString("dd/MM/yyyy HH:mm"))</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@d.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@d.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
