@model Models.Device
@{
    ViewBag.Title = "Xóa thiết bị";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">Xóa thiết bị</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa thiết bị này?
                </div>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <label class="form-label"><strong>ID:</strong></label>
                        <span class="form-control-plaintext">@Model.Id</span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label"><strong>Tên:</strong></label>
                        <span class="form-control-plaintext">@Model.Name</span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label"><strong>Vị trí:</strong></label>
                        <span class="form-control-plaintext">@Model.Location</span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label"><strong>API Key:</strong></label>
                        <span class="form-control-plaintext">@Model.ApiKey</span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label"><strong>Last Seen:</strong></label>
                        <span class="form-control-plaintext">@(Model.LastSeen?.ToString("dd/MM/yyyy HH:mm"))</span>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
