@model Models.Device
@{
    ViewBag.Title = "Thêm thiết bị";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">Thêm thiết bị</h2>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-group mb-3">
                        <label for="Name" class="form-label">Tên thiết bị</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="Location" class="form-label">Vị trí</label>
                        <input asp-for="Location" class="form-control" required />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> API Key sẽ được tự động sinh khi tạo thiết bị mới
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Lưu
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
