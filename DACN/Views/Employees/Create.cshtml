@model Models.Employee
@{
    ViewBag.Title = "Thêm nhân viên";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h2 class="mb-0">Thêm nhân viên</h2>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Tên:</label>
                        <input type="text" name="Name" value="@Model.Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phòng ban:</label>
                        <input type="text" name="Department" value="@Model.Department" class="form-control" required />
                    </div>
                    <input type="hidden" name="Role" value="employee" />
                    <div class="mb-3">
                        <label class="form-label">Số điện thoại:</label>
                        <input type="text" name="Phone" value="@Model.Phone" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email:</label>
                        <input type="email" name="Email" value="@Model.Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ảnh khuôn mặt:</label>
                        <input type="file" name="FaceImage" accept="image/*" class="form-control" />
                        <button type="button" class="btn btn-outline-primary mt-2" onclick="openCamera()">Chụp ảnh</button>
                    </div>
                    <!-- Không nhập embedding thủ công, chỉ lưu ảnh -->
                    <button type="submit" class="btn btn-success px-4">Thêm</button>
                    <a href="/Employees" class="btn btn-link ms-2">Quay lại danh sách</a>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
function openCamera() {
    alert('Tính năng chụp ảnh sẽ được tích hợp với camera hoặc app desktop.');
    // Có thể tích hợp thêm WebRTC hoặc liên kết app desktop ở đây
}
</script>
