@model IEnumerable<Models.Report>
@{
    ViewBag.Title = "Báo cáo";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Báo cáo</h2>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Loại</th>
                            <th>File</th>
                            <th>Ngày tạo</th>
                            <th>Người tạo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.Type</td>
                                <td>@r.FilePath</td>
                                <td>@(r.CreatedAt?.ToString("dd/MM/yyyy"))</td>
                                <td>@r.CreatedBy</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
