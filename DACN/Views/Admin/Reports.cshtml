@model IEnumerable<Models.Report>
@{
    ViewBag.Title = "Báo cáo";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Báo cáo</h2>
                <a asp-action="CreateReport" class="btn btn-light">
                    <i class="bi bi-plus-circle"></i> Tạo báo cáo mới
                </a>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Loại</th>
                            <th>File</th>
                            <th>Ngày tạo</th>
                            <th>Người tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.Type</td>
                                <td>@r.FilePath</td>
                                <td>@(r.CreatedAt?.ToString("dd/MM/yyyy HH:mm"))</td>
                                <td>@r.CreatedBy</td>
                                <td>
                                    <a asp-action="DownloadReport" asp-route-id="@r.Id" class="btn btn-sm btn-success">
                                        <i class="bi bi-download"></i> Download
                                    </a>
                                    <form asp-action="DeleteReport" asp-route-id="@r.Id" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa báo cáo này?')">
                                            <i class="bi bi-trash"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
