@{
    ViewBag.Title = "Quản lý khuôn mặt";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-person-bounding-box text-primary"></i> Quản lý khuôn mặt
        </h1>
        <p class="text-muted">Danh sách nhân viên đã đăng ký khuôn mặt</p>
    </div>
</div>

<div class="card shadow">
    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <h5 class="mb-0 text-white">
            <i class="bi bi-list-ul"></i> Danh sách khuôn mặt đã đăng ký
        </h5>
    </div>
    <div class="card-body">
        @if (ViewBag.EmployeesWithFaces != null && ViewBag.EmployeesWithFaces.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Ảnh</th>
                            <th>Tên nhân viên</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in ViewBag.EmployeesWithFaces)
                        {
                            <tr>
                                <td>@emp.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(emp.PhotoPath))
                                    {
                                        <img src="@emp.PhotoPath" alt="@emp.Name" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="avatar-circle bg-primary text-white" style="width: 40px; height: 40px; display: inline-flex; align-items: center; justify-content: center; border-radius: 50%;">
                                            @emp.Name.Substring(0, 1)
                                        </div>
                                    }
                                </td>
                                <td>@emp.Name</td>
                                <td>
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Đã đăng ký
                                    </span>
                                </td>
                                <td>
                                    <a href="/Employees/Details/@emp.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>
                                    <a href="/Employees/Edit/@emp.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Chưa có nhân viên nào đăng ký khuôn mặt.
                <a href="/Employees/Index" class="alert-link">Đi đến danh sách nhân viên</a> để thêm khuôn mặt.
            </div>
        }
    </div>
</div>

<!-- Modal thêm/sửa -->
<div class="modal fade" id="faceModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Thêm/Sửa khuôn mặt</h5>
    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="faceForm">
          <input type="hidden" id="faceId" />
          <div class="form-group">
            <label for="faceName">Tên</label>
            <input type="text" class="form-control" id="faceName" required />
          </div>
          <div class="form-group" id="imageGroup">
            <label for="faceImage">Ảnh khuôn mặt</label>
            <input type="file" class="form-control" id="faceImage" accept="image/*" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
        <button type="button" class="btn btn-primary" id="btnSave">Lưu</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
<script>
const API_URL = 'http://localhost:5000'; // Đổi lại nếu AI Flask chạy port khác

function loadFaces() {
    $.get(API_URL + '/faces', function(res) {
        if (res.success) {
            let html = '';
            res.faces.forEach(face => {
                html += `<tr>
                    <td>${face.id}</td>
                    <td>${face.name}</td>
                    <td>
                        <button class='btn btn-sm btn-info' onclick='editFace(${face.id}, "${face.name}")'>Sửa</button>
                        <button class='btn btn-sm btn-danger' onclick='deleteFace(${face.id})'>Xóa</button>
                    </td>
                </tr>`;
            });
            $('#facesTable tbody').html(html);
        }
    });
}

function editFace(id, name) {
    $('#modalTitle').text('Sửa khuôn mặt');
    $('#faceId').val(id);
    $('#faceName').val(name);
    $('#imageGroup').hide();
    $('#faceModal').modal('show');
}

function deleteFace(id) {
    if (confirm('Bạn chắc chắn muốn xóa?')) {
        $.ajax({
            url: API_URL + '/delete_face',
            type: 'DELETE',
            contentType: 'application/json',
            data: JSON.stringify({ id }),
            success: function(res) {
                alert(res.message);
                loadFaces();
            }
        });
    }
}

$('#btnAdd').click(function() {
    $('#modalTitle').text('Thêm khuôn mặt mới');
    $('#faceId').val('');
    $('#faceName').val('');
    $('#faceImage').val('');
    $('#imageGroup').show();
    $('#faceModal').modal('show');
});

$('#btnReload').click(loadFaces);

$('#btnSave').click(function() {
    const id = $('#faceId').val();
    const name = $('#faceName').val();
    if (id) {
        // Sửa tên
        $.ajax({
            url: API_URL + '/update_face',
            type: 'PUT',
            contentType: 'application/json',
            data: JSON.stringify({ id, name }),
            success: function(res) {
                alert(res.message);
                $('#faceModal').modal('hide');
                loadFaces();
            }
        });
    } else {
        // Thêm mới
        const file = $('#faceImage')[0].files[0];
        if (!file) { alert('Vui lòng chọn ảnh!'); return; }
        const formData = new FormData();
        formData.append('name', name);
        formData.append('image', file);
        $.ajax({
            url: API_URL + '/add_face',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(res) {
                alert(res.message);
                $('#faceModal').modal('hide');
                loadFaces();
            }
        });
    }
});

$(document).ready(loadFaces);
</script>
}
