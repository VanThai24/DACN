@{
    ViewBag.Title = "Dashboard";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-speedometer2" style="color: #3b82f6;"></i> Dashboard
            </h2>
            <p class="mb-0">Tổng quan hệ thống quản lý điểm danh</p>
        </div>
        <div class="icon-container icon-blue">
            <i class="bi bi-grid-3x3-gap-fill"></i>
        </div>
    </div>
</div>
    
<!-- Thống kê tổng quan -->
<div class="row mb-4 g-3">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="icon bg-blue mb-3">
                <i class="bi bi-people-fill"></i>
            </div>
            <h3>@ViewBag.EmployeeCount</h3>
            <p>Tổng nhân viên</p>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="icon bg-green mb-3">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <h3>@ViewBag.TodayAttendance</h3>
            <p>Điểm danh hôm nay</p>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="icon bg-purple mb-3">
                <i class="bi bi-camera-video-fill"></i>
            </div>
            <h3>@ViewBag.DeviceCount</h3>
            <p>Thiết bị hoạt động</p>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="icon bg-yellow mb-3">
                <i class="bi bi-file-earmark-text-fill"></i>
            </div>
            <h3>@ViewBag.ReportCount</h3>
            <p>Báo cáo tháng này</p>
        </div>
    </div>
</div>

<div class="row g-3">
    <!-- Biểu đồ điểm danh 7 ngày -->
    <div class="col-xl-6 col-lg-6">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="icon-container icon-blue me-3">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <div>
                        <h5 class="mb-0">Thống kê điểm danh 7 ngày</h5>
                        <small class="text-gray-500">Biểu đồ xu hướng điểm danh</small>
                    </div>
                </div>
            </div>
            <div class="card-body" style="height: 350px;">
                <canvas id="attendanceChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Biểu đồ điểm danh theo tháng -->
    <div class="col-xl-6 col-lg-6">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="icon-container icon-purple me-3">
                        <i class="bi bi-calendar3"></i>
                    </div>
                    <div>
                        <h5 class="mb-0">Thống kê 12 tháng gần nhất</h5>
                        <small class="text-gray-500">Xu hướng dài hạn</small>
                    </div>
                </div>
            </div>
            <div class="card-body" style="height: 350px;">
                <canvas id="monthlyChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Biểu đồ điểm danh tháng hiện tại -->
<div class="row mt-3">
    <div class="col-xl-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="icon-container icon-green me-3">
                        <i class="bi bi-bar-chart-fill"></i>
                    </div>
                    <div>
                        <h5 class="mb-0">Điểm danh tháng @ViewBag.CurrentMonth</h5>
                        <small class="text-gray-500">Chi tiết theo từng ngày trong tháng</small>
                    </div>
                </div>
            </div>
            <div class="card-body" style="height: 400px;">
                <canvas id="currentMonthChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Thống kê theo phòng ban -->
    <div class="col-xl-4">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="icon-container icon-yellow me-3">
                        <i class="bi bi-pie-chart-fill"></i>
                    </div>
                    <div>
                        <h5 class="mb-0">Theo phòng ban</h5>
                        <small class="text-gray-500">Phân bổ nhân sự</small>
                    </div>
                </div>
            </div>
            <div class="card-body" style="height: 400px;">
                <canvas id="departmentChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Top nhân viên đi muộn -->
<div class="row mt-3">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="icon-container icon-yellow me-3">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div>
                        <h5 class="mb-0">Nhân viên đi muộn</h5>
                        <small class="text-gray-500">Top 5 gần đây</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    @foreach (var emp in ViewBag.LateEmployees)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                            <div class="d-flex align-items-center">
                                <div class="icon-container icon-red me-3" style="width: 40px; height: 40px; font-size: 1rem; font-weight: 600;">
                                    @emp.Name.Substring(0, 1)
                                </div>
                                <div>
                                    <h6 class="mb-0">@emp.Name</h6>
                                    <small class="text-gray-500">
                                        <i class="bi bi-calendar3"></i> @(emp.Time?.ToString("dd/MM/yyyy") ?? "N/A")
                                    </small>
                                </div>
                            </div>
                            <span class="badge rounded-pill" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); padding: 0.5rem 1rem;">
                                <i class="bi bi-clock"></i> @(emp.Time?.ToString("HH:mm") ?? "--:--")
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="col-xl-6">
        <div class="card">
            <div class="card-header" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-lightning"></i> Thao tác nhanh
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-3">
                    <a href="@Url.Action("Create", "Employees")" class="btn btn-lg btn-success">
                        <i class="bi bi-person-plus-fill"></i> Thêm nhân viên mới
                    </a>
                    <a href="@Url.Action("Reports", "Admin")" class="btn btn-lg btn-primary">
                        <i class="bi bi-file-earmark-text"></i> Tạo báo cáo
                    </a>
                    <a href="@Url.Action("Create", "Devices")" class="btn btn-lg btn-info">
                        <i class="bi bi-plus-circle"></i> Thêm thiết bị
                    </a>
                    <a href="@Url.Action("Index", "Attendance")" class="btn btn-lg btn-warning">
                        <i class="bi bi-calendar-check"></i> Xem điểm danh
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Biểu đồ điểm danh 7 ngày
    var attendanceData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DailyAttendance));
    var attendanceCtx = document.getElementById('attendanceChart').getContext('2d');
    
    // Gradient cho line chart
    var gradientFill = attendanceCtx.createLinearGradient(0, 0, 0, 300);
    gradientFill.addColorStop(0, 'rgba(102, 126, 234, 0.3)');
    gradientFill.addColorStop(1, 'rgba(118, 75, 162, 0.05)');
    
    var attendanceChart = new Chart(attendanceCtx, {
        type: 'line',
        data: {
            labels: attendanceData.map(d => d.Date),
            datasets: [{
                label: 'Số lượt điểm danh',
                data: attendanceData.map(d => d.Count),
                backgroundColor: gradientFill,
                borderColor: 'rgba(102, 126, 234, 1)',
                borderWidth: 3,
                tension: 0.4,
                fill: true,
                pointRadius: 5,
                pointHoverRadius: 7,
                pointBackgroundColor: 'rgba(102, 126, 234, 1)',
                pointBorderColor: '#fff',
                pointBorderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                    labels: {
                        padding: 20,
                        font: { size: 12, weight: '600' }
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    titleFont: { size: 14, weight: 'bold' },
                    bodyFont: { size: 13 },
                    cornerRadius: 8
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)',
                        drawBorder: false
                    },
                    ticks: {
                        font: { size: 11 },
                        padding: 10
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        font: { size: 11, weight: '600' },
                        padding: 10
                    }
                }
            }
        }
    });

    // Biểu đồ phòng ban
    var departmentData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DepartmentStats));
    var departmentCtx = document.getElementById('departmentChart').getContext('2d');
    var departmentChart = new Chart(departmentCtx, {
        type: 'doughnut',
        data: {
            labels: departmentData.map(d => d.Department || 'Chưa phân loại'),
            datasets: [{
                data: departmentData.map(d => d.Count),
                backgroundColor: [
                    'rgba(102, 126, 234, 0.8)',
                    'rgba(17, 153, 142, 0.8)',
                    'rgba(79, 172, 254, 0.8)',
                    'rgba(240, 147, 251, 0.8)',
                    'rgba(235, 51, 73, 0.8)',
                ],
                borderWidth: 3,
                borderColor: '#fff',
                hoverOffset: 10
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 15,
                        font: { size: 12, weight: '600' },
                        generateLabels: function(chart) {
                            const data = chart.data;
                            if (data.labels.length && data.datasets.length) {
                                return data.labels.map((label, i) => {
                                    const value = data.datasets[0].data[i];
                                    return {
                                        text: `${label} (${value})`,
                                        fillStyle: data.datasets[0].backgroundColor[i],
                                        hidden: false,
                                        index: i
                                    };
                                });
                            }
                            return [];
                        }
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    titleFont: { size: 14, weight: 'bold' },
                    bodyFont: { size: 13 },
                    cornerRadius: 8,
                    callbacks: {
                        label: function(context) {
                            let label = context.label || '';
                            let value = context.parsed;
                            let total = context.dataset.data.reduce((a, b) => a + b, 0);
                            let percentage = ((value / total) * 100).toFixed(1);
                            return `${label}: ${value} (${percentage}%)`;
                        }
                    }
                }
            }
        }
    });

    // Biểu đồ điểm danh 12 tháng
    var monthlyData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.MonthlyAttendance));
    var monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
    
    var gradientBar = monthlyCtx.createLinearGradient(0, 0, 0, 300);
    gradientBar.addColorStop(0, 'rgba(118, 75, 162, 0.8)');
    gradientBar.addColorStop(1, 'rgba(118, 75, 162, 0.3)');
    
    var monthlyChart = new Chart(monthlyCtx, {
        type: 'bar',
        data: {
            labels: monthlyData.map(d => d.Month),
            datasets: [{
                label: 'Tổng lượt điểm danh',
                data: monthlyData.map(d => d.Count),
                backgroundColor: gradientBar,
                borderColor: 'rgba(118, 75, 162, 1)',
                borderWidth: 2,
                borderRadius: 8,
                borderSkipped: false
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                    labels: {
                        padding: 20,
                        font: { size: 12, weight: '600' }
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    titleFont: { size: 14, weight: 'bold' },
                    bodyFont: { size: 13 },
                    cornerRadius: 8
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)',
                        drawBorder: false
                    },
                    ticks: {
                        font: { size: 11 },
                        padding: 10
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        font: { size: 10, weight: '600' },
                        padding: 10,
                        maxRotation: 45,
                        minRotation: 45
                    }
                }
            }
        }
    });

    // Biểu đồ điểm danh tháng hiện tại
    var currentMonthData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.CurrentMonthDailyAttendance));
    var currentMonthCtx = document.getElementById('currentMonthChart').getContext('2d');
    
    var gradientGreen = currentMonthCtx.createLinearGradient(0, 0, 0, 350);
    gradientGreen.addColorStop(0, 'rgba(17, 153, 142, 0.8)');
    gradientGreen.addColorStop(1, 'rgba(17, 153, 142, 0.2)');
    
    var currentMonthChart = new Chart(currentMonthCtx, {
        type: 'bar',
        data: {
            labels: currentMonthData.map(d => d.Date),
            datasets: [{
                label: 'Lượt điểm danh',
                data: currentMonthData.map(d => d.Count),
                backgroundColor: gradientGreen,
                borderColor: 'rgba(17, 153, 142, 1)',
                borderWidth: 2,
                borderRadius: 6,
                borderSkipped: false
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                    labels: {
                        padding: 20,
                        font: { size: 12, weight: '600' }
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    titleFont: { size: 14, weight: 'bold' },
                    bodyFont: { size: 13 },
                    cornerRadius: 8,
                    callbacks: {
                        title: function(context) {
                            return 'Ngày ' + context[0].label;
                        },
                        label: function(context) {
                            return 'Điểm danh: ' + context.parsed.y + ' lượt';
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)',
                        drawBorder: false
                    },
                    ticks: {
                        font: { size: 11 },
                        padding: 10,
                        stepSize: 5
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        font: { size: 9, weight: '600' },
                        padding: 8,
                        maxRotation: 0,
                        autoSkip: true,
                        maxTicksLimit: 15
                    }
                }
            }
        }
    });
});
</script>

<style>
.avatar-circle {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
}
</style>
