@model Models.User
@{
    ViewBag.Title = "Xóa người dùng";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">Xóa người dùng</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa người dùng này?
                </div>
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <label class="form-label"><strong>ID:</strong></label>
                        <span class="form-control-plaintext">@Model.Id</span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label"><strong>Username:</strong></label>
                        <span class="form-control-plaintext">@Model.Username</span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label"><strong>Role:</strong></label>
                        <span class="form-control-plaintext">@Model.Role</span>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
