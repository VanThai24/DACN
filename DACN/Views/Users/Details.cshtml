@model Models.User
@{
    ViewBag.Title = "Chi tiết người dùng";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">Chi tiết người dùng</h2>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label class="form-label"><strong>ID:</strong></label>
                    <span class="form-control-plaintext">@Model.Id</span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label"><strong>Username:</strong></label>
                    <span class="form-control-plaintext">@Model.Username</span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label"><strong>Role:</strong></label>
                    @if (Model.Role == "Admin")
                    {
                        <span class="badge bg-danger fs-6">@Model.Role</span>
                    }
                    else if (Model.Role == "Manager")
                    {
                        <span class="badge bg-warning text-dark fs-6">@Model.Role</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-6">@Model.Role</span>
                    }
                </div>
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
